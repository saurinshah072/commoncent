<resources>


    <style name="fontBold">
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="fontRegular">
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="fontSemiBold">
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>


    <style name="fontLight">
        <item name="android:fontFamily">@font/lato_light</item>
    </style>

    <style name="fontMedium">
        <item name="android:fontFamily">@font/lato_thin</item>
    </style>


    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/blue_bg</item>
        <item name="android:textColor">@color/blue_bg</item>
    </style>

    <style name="MaterialAnimations.TextAppearance.Title" parent="android:TextAppearance.Material.Title">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="MaterialAnimations.Text.Body" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/_16sdp</item>
        <item name="android:padding">@dimen/_16sdp</item>
    </style>


    <style name="Theme.Dialog" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorAccent">@color/blue_bg</item>
    </style>


    <style name="AlertDialogTheme">
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Negative</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextStyle</item>
        <item name="fontFamily">@font/lato_regular</item>
    </style>

    <style name="TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="fontFamily">@font/lato_bold</item>

    </style>

    <style name="BodyTextStyle" parent="MaterialAlertDialog.MaterialComponents">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="fontFamily">@font/lato_bold</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="fontFamily">@font/lato_bold</item>

    </style>

    <style name="Alert.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/gray_text</item>
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="fontFamily">@font/lato_bold</item>
    </style>

    <style name="tabBarStyle">
        <item name="fontFamily">@font/lato_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">@dimen/txt_small_size</item>
    </style>


    <style name="edittextviewStyle">
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/textcolor</item>
        <item name="android:paddingStart">@dimen/_8sdp</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textSize">@dimen/txt_size</item>
        <item name="android:background">@drawable/ic_bg_input</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColorHint">@color/edithintcolor</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
    </style>


    <style name="edittextviewNormalStyle">
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/textcolor</item>
        <item name="android:paddingStart">@dimen/_8sdp</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textSize">@dimen/txt_size</item>
        <item name="android:background">@drawable/ic_bg_input</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:inputType">text</item>
        <item name="android:textColorHint">@color/edithintcolor</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
    </style>

    <style name="edittextviewWhiteStyle">
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/textcolor</item>
        <item name="android:paddingStart">@dimen/_8sdp</item>
        <item name="android:textColorHint">@color/edithintcolor</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textSize">@dimen/txt_size</item>
        <item name="android:background">@drawable/ic_bg_input_white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:inputType">text</item>
    </style>


    <style name="edittextviewPasswordStyle">
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/textcolor</item>
        <item name="android:paddingStart">@dimen/_8sdp</item>
        <item name="android:textColorHint">@color/edithintcolor</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textSize">@dimen/txt_size</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:background">@drawable/ic_bg_input</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="textviewStyle">
        <item name="fontFamily">@font/lato_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/textcolor</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/txt_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textviewSmallStyle">
        <item name="fontFamily">@font/lato_regular</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/textcolor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/txt_size</item>
    </style>

    <style name="textviewMediaStyle">
        <item name="fontFamily">@font/lato_regular</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/textcolor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/txt_large_size</item>
    </style>

    <style name="textviewBigStyle">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textcolor</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/txt_2x_extra_large_size</item>
    </style>


    <style name="textviewColumnBlack">
        <item name="fontFamily">@font/lato_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/txt_size</item>
    </style>


    <style name="btnBigStyle">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/txt_size</item>
    </style>

    <style name="btnBigStyle_break_down">
        <item name="fontFamily">@font/lato_bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/txt_size</item>
    </style>


    <style name="ErrorTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/holo_orange_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>


    <style name="MaterialSearchViewStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray_text</item>
        <item name="android:hint">@string/app_name</item>
        <item name="android:inputType">textCapWords</item>
    </style>


    <style name="ChipStyleOrange">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="ChipStyle">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="Theme.DialogPrint" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowEnterAnimation">@anim/slide_out_down</item>
        <item name="android:textColor">@color/textcolor</item>
        <item name="android:textColorPrimary">@color/textcolor</item>
        <item name="colorAccent">@color/textcolor</item>

    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/_13sdp</item>
    </style>

    <style name="CheckBoxStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/blue_btn</item>
    </style>

    <style name="ErrorStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/error_text</item>
        <!-- other styles... -->
    </style>

</resources>
