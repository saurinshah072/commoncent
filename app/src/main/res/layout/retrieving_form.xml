<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/retrieving_form_hr_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_regular"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/_12sdp"
        android:visibility="gone"
        android:hint="PO Name"
        android:textSize="@dimen/_13sdp" />
    <LinearLayout
        android:id="@+id/retrieving_form_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_12sdp"
        android:weightSum="1">
        <TextView
            android:id="@+id/retrieving_form_vt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/black"
            android:layout_marginBottom="@dimen/_12sdp"
            android:visibility="gone"
            android:hint="PO Name"
            android:textSize="@dimen/_13sdp" />
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/retrieving_form_aet"
            android:background="@drawable/ic_bg_input"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_weight="1"
            android:drawablePadding="@dimen/_4sdp"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:paddingStart="@dimen/_8sdp"
            android:textSize="@dimen/_11sdp"
            android:fontFamily="@font/lato_regular"/>
        <RelativeLayout
            android:id="@+id/retrieving_form_scan"
            android:visibility="gone"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/ic_bg_input">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_scanner" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>