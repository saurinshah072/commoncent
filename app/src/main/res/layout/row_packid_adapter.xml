<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">
    <CheckBox
        android:visibility="gone"
        android:id="@+id/row_packid_adapter_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/CheckBoxStyle"/>
    <TextView
        android:id="@+id/row_packid_adapter_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_2sdp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="left"
        android:maxLines="2"
        android:minHeight="@dimen/_30sdp"
        android:padding="@dimen/_8sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:textColor="@color/black"
        tools:text="QKVY01"
        android:text="QKVY01"
        android:textSize="@dimen/_10sdp" />

    <TextView
        android:id="@+id/row_packid_adapter_image_tv"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:minHeight="@dimen/_30sdp"
        android:padding="@dimen/_8sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:text="View Images"
        android:textColor="@color/blue_btn"
        android:textSize="@dimen/_10sdp"
        android:visibility="invisible"
        tools:text="View Images" />

    <TextView
         android:id="@+id/row_packid_adapter_pdf_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
         android:layout_weight="1"
        android:maxLines="2"
        android:minHeight="@dimen/_30sdp"
        android:padding="@dimen/_8sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:textColor="@color/blue_btn"
        tools:text="View PDF"
        android:text="View PDF"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:textSize="@dimen/_10sdp" />
</LinearLayout>